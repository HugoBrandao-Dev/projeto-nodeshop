<%- include('../../partials/admin/header.ejs') %>
	<%- include('../../partials/admin/navbar.ejs') %>
		<main class="principal">
			<h2>Cadastrar cliente</h2>
			<hr>
			<form action="/cliente/salvar" method="POST" onsubmit="verificarSenhas(event, this)">
				<label>Nome:</label>
				<input type="text" name="iptNome">

				<label>CPF:</label>
				<input type="text" name="iptCpf">

				<label>Data de nascimento:</label>
				<input type="date" name="iptNascimento" max="<%= dataMaxima %>">

				<label>Endereço:</label>
				<input type="text" name="iptEndereco">

				<label>Informações adicionais:</label>
				<textarea name="iptInformacoes" cols="30" rows="10"></textarea>

				<label>Telefone:</label>
				<input type="text" name="iptTelefone">

				<label>Celular:</label>
				<input type="text" name="iptCelular">

				<label>Email:</label>
				<input type="text" name="iptEmail">
				
				<label>Senha:</label>
				<input type="password" name="iptSenha">

				<label>Digite novamente sua senha:</label>
				<input type="password" name="iptSenhaNovamente">

				<button type="submit" class="btn-add right">Cadastrar</button>
			</form>
		</main>
		<script>
			function verificarSenhas(event, form) {
				event.preventDefault()
				senha = form['iptSenha'].value
				senhaNovamente = form['iptSenhaNovamente'].value
				if (senha === senhaNovamente) {
					form.submit()
				} else {
					alert('As senhas informadas são diferentes.')
				}
			}
		</script>
		<%- include('../../partials/admin/footer.ejs') %>