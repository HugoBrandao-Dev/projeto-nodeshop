<main class="principal">
	<h2>Opções para produtos</h2>
	<hr>
	<ul class="opcao-lista">
		<li class="opcao-item">
			<label>
				<input type="radio" name="rdOpcao" value="funcionario" checked>Funcionário
			</label>
		</li>
		<li class="opcao-item">
			<label>
				<input type="radio" name="rdOpcao" value="setor">Setor
			</label>
		</li>
		<li class="opcao-item">
			<label>
				<input type="radio" name="rdOpcao" value="cargo">Cargo
			</label>
		</li>
	</ul>
	<div class="opcoes">
		<section id="funcionario" class="opcao">
			<form action="" method="POST">
				<label>Nome:</label>
				<input type="text" name="iptNome" placeholder="Nome do funcionário">

				<label>CPF:</label>
				<input type="text" name="iptCPF" placeholder="CPF do funcionário">

				<label>Setor:</label>
				<select name="sltTipo">
					<option value="0">Atendimento</option>
					<option value="1">Assistêcia Técnica</option>
					<option value="3">Gerência</option>
				</select>

				<label>Cargo:</label>
				<select name="sltCargo">
					<option value="0">Atendente</option>
					<option value="1">Técnico assitente</option>
					<option value="2">Gerente</option>
					<option value="3">Estagiário</option>
				</select>

				<button type="submit" class="btn-add">Cadastrar</button>
			</form>
			<hr>
			<table class="table-opcoes">
				<thead>
					<tr>
						<th>ID</th>
						<th>Funcionário</th>
						<th>CPF</th>
						<th>Setor</th>
						<th>Cargo</th>
