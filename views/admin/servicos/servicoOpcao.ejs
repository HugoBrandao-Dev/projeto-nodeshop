					</tr>
					<tr>
						<td>3</td>
						<td>Doralice</td>
						<td>44444444444</td>
						<td>0</td>
						<td>0</td>
					</tr>
					</tbody>
				</table>
			</section>
			<section id="setor" class="opcao">
				<form action="" method="POST">
					<label>Setor:</label>
					<input type="text" name="iptSetor" placeholder="Nome do setor">

					<button type="submit" class="btn-add">Cadastrar</button>
				</form>
				<hr>
				<table class="table-opcoes">
					<thead>
						<tr>
							<th>ID</th>
							<th>Setor</th>
						</tr>
					</thead>
					<tbody>
						<tr>
							<td>0</td>
							<td>Atendimento</td>
						</tr>
						<tr>
							<td>1</td>
							<td>Assistência técnica</td>
						</tr>
						<tr>
							<td>2</td>
							<td>Gerência</td>
						</tr>
					</tbody>
				</table>
			</section>
				<section id="cargo" class="opcao">
					<form action="" method="POST">
						<label>Cargo:</label>
						<input type="text" name="iptCargo" placeholder="Nome do cargo">

